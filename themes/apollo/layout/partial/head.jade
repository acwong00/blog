meta(charset="utf-8")
meta(name="X-UA-Compatible", content="IE=edge")

title 
    block site_title
        = config.title
block description
    meta(name="description", content= config.description ? config.description : 'A Blog Powered By Hexo')

//- Canonical links
if is_home() || is_archive()
  link(rel="canonical", href=config.url + url_for(page.path))
  link(rel="alternative", href=config.url + url_for(page.path), hreflang="zh-cn")
else
  link(rel="canonical", href=url_for(page.permalink))
  link(rel="alternative", href=url_for(page.permalink), hreflang="zh-cn")

//- rss
link(rel="alternate", href="/atom.xml" title="acwong")

meta(name="viewport", content="width=device-width, initial-scale=1")
link(rel="short icon", href=url_for(theme.favicon))
link(rel="stylesheet", href=url_for("css/apollo.css"))
    
if theme.googlefonts
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600" type='text/css')
else 
    link(rel="stylesheet", href="http://fonts.useso.com/css?family=Source+Sans+Pro:400,600" type='text/css')